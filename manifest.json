{
  "manifest_version": 2,
  "name": "Trello Status Check",
  "version": "0.1.8",
  "description": "Display status updates in card titles in the format of `// <status update>`",
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "browser_action": {
    "name": "Trello Status Check",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": ["jquery-3.1.0.min.js", "content.js"],
      "matches": ["https://trello.com/b/*"]
    }
  ],
  "permissions": ["storage"]
}
